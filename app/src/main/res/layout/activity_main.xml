<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_sunning"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <!--#BDC5F6-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:alpha="90"
                android:clickable="true"
                android:focusable="auto"
                app:srcCompat="@drawable/ic_setings" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="test2"
                app:srcCompat="@drawable/ic_www" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="auto"
                android:onClick="list_cites"
                android:paddingLeft="60dp"
                android:selectAllOnFocus="false"
                android:text="@string/city"
                android:textAlignment="center"
                android:textColor="@color/colorTempDey"
                android:textSize="46sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_now"
                android:onClick="test1"
                android:textColor="@color/colorTempDey"
                android:textSize="80sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginStart="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Давление"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="748 mm"
                            android:textAlignment="textEnd"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ветер"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="вост. 3 м/с"
                            android:textAlignment="textEnd"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Влажность"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="60%"
                            android:textAlignment="textEnd"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekly"
                android:textColor="@color/colorText"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@string/temperature_now"
                android:textColor="@color/colorTempDey"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/temp_Night"
                android:textColor="@color/colorTempNight"
                android:textSize="24sp" />
        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/style_text_hours"
                        android:layout_width="wrap_content"
                        android:text="@string/now" />

                    <ImageView
                        android:id="@+id/imageView1"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny2" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/style_text_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temperature_now"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour1"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView2"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour1"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour2"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView3"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour2"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/style_text_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hour3"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_cloudy2" />

                    <TextView
                        android:id="@+id/textView8"
                        style="@style/style_text_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/temp_hour3"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour4"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView5"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour4"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour5"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView6"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour5"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour6"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView7"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour6"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour7"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView8"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_sunny" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour7"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/hour8"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />

                    <ImageView
                        android:id="@+id/imageView9"
                        style="@style/style_image_hours"
                        app:srcCompat="@drawable/ic_cloudy" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/temp_hour8"
                        android:textAlignment="center"
                        android:textColor="@color/colorTempDey" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <CalendarView
            android:id="@+id/calendarView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>